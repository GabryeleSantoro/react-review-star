{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist",
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules"],
}